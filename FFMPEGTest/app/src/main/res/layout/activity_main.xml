<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bignerdranch.android.ffmpegtest.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Input Bitstream"/>
    <EditText
        android:id="@+id/input_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="a.mp4"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="streaming url"/>
    <EditText
        android:id="@+id/streaming_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="a.yuv"/>

    <LinearLayout
        android:layout_width="382dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom">
        <Button
            android:id="@+id/start_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"/>
        <Button
            android:id="@+id/stop_streaming"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="stop"
            android:layout_gravity="bottom"/>
    </LinearLayout>
    <TextView
        android:id="@+id/streaming_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

